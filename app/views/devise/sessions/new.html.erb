<div class="container">
  <div class="row mt-5 bg-dark text-white">
    <div class="col-md-5 col-md-offset-1">
      <div class="login-alt-container">
        <h1 class="push-top-bottom mt-5 p-3">
          <i class="fa fa-bolt"></i>Quality Assunce Proyect
        </h1>
      </div>
    </div>
    <div class="col-md-5 mt-5">
      <div class="login-title text-center">
        <h2>Log in</h2>
      </div>
      <div class="block push-bit mt-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div><%= render '/shared/flash' %></div>
          <div class="form-group mt-4">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon"></span>
                <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: 'form-control input-lg', placeholder: 'Email' %>
              </div>
            </div>
          </div>
          <div class="form-group mt-4">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon"></span>
                <%= f.password_field :password, required: true, autocomplete: "current-password", class: 'form-control input-lg', placeholder: 'Password' %>
              </div>
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
              <div class="form-group mt-4 form-actions p-2">
                <div class="col-xs-12">
                  <label class="switch switch-primary" data-toggle="tooltip" title="" data-original-title="Remember Me?">
                    <%= f.check_box :remember_me %>
                    <span></span> Remember me
                  </label> <br>
                  <label class="switch switch-primary" data-toggle="tooltip" title="" data-original-title="Show password">
                    <%= check_box_tag :show_password %>
                    <span></span> Show password
                  </label>
                </div>
              </div>
            <% end %>
              
        
        
          <div class="actions mt-4">
            <%= f.submit " > Log to Dashboard", class: 'btn btn-in btn-primary' %>
          </div>
        <% end %>
        <div class="form-group mt-4 p-3">
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



